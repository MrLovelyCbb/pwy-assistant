<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_5_2_2"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="未参保付费报修服务  >"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="待付款"
                android:textColor="#d6761f" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/a5_2_1_rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_5_2_2"
            android:padding="10dp">

            <TextView
                android:id="@+id/a5_2_1_tv11"
                android:layout_width="wrap_content"
                android:minWidth="60dp"
                android:layout_height="wrap_content"
                android:text="王二王二"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/a5_2_1_tv12"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/a5_2_1_tv11"
                android:text="13879301234"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/a5_2_1_tv13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:text="￥265" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/shape_5_2_2"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="2015-3-22 15:20:15"
                android:gravity="right"
                android:layout_weight="2"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/repair_money"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="渠道价：￥215"
                android:textColor="@color/black" />
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="8dp"
            android:background="@drawable/shape_5_2_2"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:weightSum="4">
            
            <TextView 
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:textSize="8sp"
                android:gravity="center_vertical"
                android:text="2015-3-25 15:20:15 自动取消报修"/>
            <Button 
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_margin="6dp"
                android:textSize="10sp"
                android:text="取消报修"
                android:textColor="#fff"
                android:background="@drawable/btn_show"/>
            <Button 
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:textSize="10sp"
                android:text="付款"
                android:textColor="#fff"
                android:background="@drawable/btn_show"/>
            
        </LinearLayout>

</LinearLayout>
